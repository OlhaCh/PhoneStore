<Window x:Class="UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="LoginWindow" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="NicknameTxt"/>
        <TextBox Grid.Row="1" Name="EMailTxt"/>
        <Button Grid.Row="2" Margin="80,10,80,10" Name="SignInButton" Content="Sign In" FontSize="20" FontWeight="Bold" Click="SignInButton_Click"/>
    </Grid>
</Window>
